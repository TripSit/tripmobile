<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="autoCompleteTextColor">?secondaryTextColour</item>
        <item name="android:dropDownItemStyle">@style/DropDownItem</item>
        <item name="android:expandableListViewStyle">@style/ExpandableListView</item>
        <item name="android:textViewStyle">@style/DefaultText</item>
        <item name="android:textAppearanceMedium">@style/MediumText</item>
        <item name="android:textAppearanceLarge">@style/LargeText</item>
    </style>

    <style name="DefaultText" parent="android:Widget.TextView">
        <item name="android:autoLink">web</item>
        <item name="android:textColor">?primaryTextColour</item>
    </style>

    <style name="MediumText" parent="DefaultText">
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="LargeText" parent="DefaultText">
        <item name="android:paddingLeft">@dimen/heading_padding</item>
        <item name="android:paddingRight">@dimen/heading_padding</item>
        <item name="android:textSize">@dimen/heading_size</item>
    </style>

    <style name="BaseThemeWithBackground" parent="BaseTheme">
        <item name="android:background">?backgroundColour</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="dividerColour">@color/dark_divider</item>
        <item name="primaryTextColour">@color/dark_text</item>
        <item name="secondaryTextColour">@color/dark_text_secondary</item>
        <item name="dropDownColour">@color/dark_text_secondary</item>
        <item name="backgroundColour">@color/dark_background</item>
        <item name="android:dropDownItemStyle">@style/DropDownItem</item>
    </style>

    <style name="LightTheme" parent="BaseTheme">
        <item name="android:buttonStyle">@style/LightButton</item>
        <item name="dividerColour">@color/light_divider</item>
        <item name="primaryTextColour">@color/light_text</item>
        <item name="secondaryTextColour">@color/light_text_secondary</item>
        <item name="dropDownColour">@color/light_text_secondary</item>
        <item name="backgroundColour">@color/light_background</item>
    </style>

    <style name="LightButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/selector_button_light</item>
    </style>

    <style name="DarkButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/selector_button_dark</item>
    </style>

    <style name="CombinationsHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingLeft">4dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CombinationsContent" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:max">100</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">10dip</item>
    </style>

    <style name="MenuText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?primaryTextColour</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:textSize">@dimen/menu_text</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ExpandableListView" parent="android:Widget.ExpandableListView">
        <item name="android:divider">?dividerColour</item>
        <item name="android:childDivider">?dividerColour</item>
        <item name="android:footerDividersEnabled">true</item>
        <item name="android:dividerHeight">1sp</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">@dimen/menu_button</item>
        <item name="android:layout_height">@dimen/menu_button</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MenuRow">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MenuColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MenuColumnBuffer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.1</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?dividerColour</item>
    </style>

    <style name="DropDownItem" parent="android:style/Widget.DropDownItem">
        <item name="android:textColor">?secondaryTextColour</item>
        <item name="android:background">?backgroundColour</item>
    </style>

    <style name="SingleCombinationText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">38dp</item>
    </style>

    <style name="LoadingSpinner" parent="android:Widget.ProgressBar.Large">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
